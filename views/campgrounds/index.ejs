<%- include("../partials/header")%>


<div class="container">
<header class="jumbotron">
    <div class="container">
        <h1>Welcome to Yelp Camp
        </h1>
     <p>Enjoy the handpicked camps from all over the world</p>
 <p>
     <a class="btn btn-info btn large" href="/campgrounds/new">Add new Campground</a>
     </p>
   
    </div>   
</header>


<div class ="row text-center" style="display: flex; flex-wrap:wrap">
  <% campgrounds.forEach(function(campground){ %>
    <div class=" col-md-3 col-sm-6">
      
         <img src = "<%= campground.image %>" class="img-fluid img-thumbnail">
          <div class="caption">
              <h4><%= campground.name%></h4>

          </div>
          <p>
            <a href="/campgrounds/<%= campground._id%>" class="btn btn-sm btn-outline-secondary">More Info</a>
          </p>
          
   
    
   </div>
        <% }); %>
      </div>
    </div>
        <%- include("../partials/footer")%>