<%- include("../partials/header")%>
<br>

<div class="container"> 
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Yelp Camp</p>
            <div class="list-group">
             <br>
                <li class ="list-group-item active">Info 1</li>
                 <li class ="list-group-item">Info 2</li>
                <li class ="list-group-item">Info 3</li>
           </div>
        
        </div>
        
        <div class="col-md-9">
            
            <div class="thumbnail card card-body mb-3 ">
                <div class="text-center"><img class="img-responsive rounded w-100 d-block" src="<%=campground.image%>"> </div>
                
                <div class="caption-full pt-3">
                   <b> <p class="text-right">$9500/week</p></b>
                    <h4><a><%=campground.name%></a></h4>
                    <p><%=campground.description%></p>
                </div>
            </div>
           
            <div class="jumbotron bg-light">
              
                <div class="text-right">
                     <a class="btn btn-outline-success" href="/campgrounds/<%=campground._id %>/comments/new">Add a New Comment</a>
                </div>
                <hr>
               

                <% campground.comments.forEach(function(comment) { %>
                <div class="row">
                    <div class="col-md-9">
                       <b><%= comment.author %></b> 
                       <span class="float-right">10 days ago</span>
                      <p><%= comment.text %></p> 
                    </div>

                </div>
                <% }) %>
            </div>
        
        </div>

     </div>

    </div>










<%- include("../partials/footer")%>